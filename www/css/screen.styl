@import reset
@import 'fontello/fontello'
@import 'fontello/animation'
@import dev


/* Colors */

$blue = rgb(44, 55, 71)
$lightBlue = $blue + #444


/* Mixins */

multi-column(n, gap, width)
	-webkit-column-count n
	-webkit-column-gap gap
	-webkit-column-fill balance
	-webkit-column-width width
	-moz-column-count n
	-moz-column-gap gap
	-moz-column-fill balance
	-moz-column-width width
	column-count n
	column-gap gap
	column-fill balance
	column-width width


/* Generics */

body
	font-family "Museo Sans 300", Arial, "Helvetica Neue", Helvetica, sans-serif
	font-weight 300
	font-style normal

a
	text-decoration none
	&:visited, &:link, &:visited
		color inherit

.float-left
	float left

.float-right
	float right


/* Styles */

.container
	width 1200px
	height 100%
	margin auto

header
	display block
	height $headerHeight = 45px
	width 100%
	background-color $blue

	.logo
		position absolute
		padding-top 3px
		margin-left -108px
		left 50%

	ul
		display inline-block
		height 100%

	li
		color white
		display inline-block
		height 100%
		padding 15px .5em 0 .5em

		&:hover, &.hover
			background-color white
			color $blue
		a
			display block
			height 100%

	ul.dropdown
		display none
		position absolute
		top $headerHeight
		width $dropdownWidth = 176px
		height auto
		margin-left -1px
		border 1px solid $blue
		border-top 0px
		font-size 14px
		&.open
			display block
		li
			display block
			height 14px
			color $blue
			&.has-divider
				border-top 1px solid $lightBlue
			&:hover
				color white
				background-color $lightBlue
			&.hover
				color white
				background-color $blue
				ul
					display block
			a
				margin -16px -7px 0 -7px
				padding 10px 7px 0 7px
				display block
				width 100%
				height 29px

			ul
				display none
				position absolute
				top -1px
				left $dropdownWidth
				width $subDropdownWidth = 450px
				border 1px solid $blue
				$gap = 10px
				multi-column(2, $gap, ($subDropdownWidth - $gap) / 2)
				li
					margin 4px 1em

