.categories
	.tree
		display inline-block
		ul
			display inline-block
			width auto
			vertical-align top
			list-style none
			border-left 1px solid $lightBlue
			line-height 130%

			li
				margin 0 1em 0 .5em
			li.selected
				background-color $lightBlue
				margin 0
				padding 0 1em 0 .5em
				a
					color white
			ul
				text-align left
.entities
	display inline-block
	vertical-align top
	height 100%
	width 250px - 1px - 20px
	margin-right 20px
	border-left 1px solid $lightBlue
	ol
		list-style none
		&.path
			font-size 11pt
			li
				background-color $gray
				border-bottom 1px solid $darkGray
				&:hover
					background-color white
				a
					display block
					padding 1ex 1em .5ex 34px
					&:hover
						text-decoration none
				i
					display inline-block
					font-size 14pt
					width $size = 28px
					$offset = 5px
					height $size - $offset
					padding-top $offset
					border-radius($size / 2)
					margin-left -30px
					background-color $darkGray
					color $blue

	.parents
		a
			color white
			display block
			padding 1ex 1em
		li:nth-of-type(1)
			background-color $blue
		li:nth-of-type(2)
			background-color $blue + #333
		li:nth-of-type(3)
			background-color $blue + 2*#333
		li:nth-of-type(4)
			background-color $blue + 3*#333
		li:last-of-type
			margin-bottom 1ex
