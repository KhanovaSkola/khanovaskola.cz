body
	font-family "Museo Sans 300", Arial, "Helvetica Neue", Helvetica, sans-serif
	font-weight 300
	font-style normal
	text-rendering optimizeLegibility

strong, b
	font-family "Museo Sans 700", Arial, 'Helvetica Neue', Helvetica, sans-serif
	font-weight 700
	font-style normal

a:not(.button)
	text-decoration none
	color $link
	&:visited, &:link, &:visited
		color $link
	&:hover
		color $green
		text-decoration underline
.float-left
	float left
.float-right
	float right
.clear
	clear both
.icon-dubbed
	color rgb(72, 113, 201)
.error
	color red
	margin-bottom 1ex
ul.error
	list-style none
p
	line-height 2.7ex
	a:not(.button)
		color $link
		text-decoration none
		&:visited, &:link, &:visited
			color $link
		&:hover
			color $green
			text-decoration underline

h1
	font-size 16pt
	margin-bottom 1ex
h2
	font-size 15pt
h3
	font-size 14pt

h4
	font-size 12pt
select
	width 304px
.chzn-container
	margin-bottom .8ex
a.chzn-single
	span
		color black !important

input[type=text], input[type=email], input[type=password]
	background-color #fafafa
	border 1px solid #c6d1ad
	font-size 10pt
	padding 0 0 0 .5em
	margin-bottom .5ex
	height 24px
	width 295px
	outline(0px, 0px, $green)
	border-radius(4px)
cite
	color $lightBlue

.categories [id^="video-"]
	// http://www.colourlovers.com/palette/3198470/Funky_Bowtie
	&.video-verifications-0
		background-color rgba(209,30,69,.1)
	&.video-verifications-1
		background-color rgba(239,221,87,.1)
	&.video-verifications-2
		background-color rgba(104,191,138,.1)
