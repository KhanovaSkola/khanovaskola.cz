header
	display block
	height $headerHeight = 45px
	width 100%
	background-color $blue

	.logo
		position absolute
		padding-top 3px
		margin-left -108px
		left 50%

		#spinner
			display inline-block
			position relative
			top -9px
			left 10px
			height $size = 24px
			width $size
			color white

			&.hidden
				display none
			.icon-spinner
				margin-left -1 * $size * 0.2
				font-size $size
				transform-origin($size/2, $size/2)


	ul
		display inline-block
		height $headerHeight

	li
		color white
		display inline-block
		height $headerHeight - 15px
		padding 15px .5em 0 .5em
		&:hover, &.hover
			background-color white
			color $blue
		a
			display block
			$offset = 15px
			height $headerHeight - $offset
			margin -1*$offset 0 0 0
			padding $offset 0 0 0

	ul.dropdown
		display none
		position absolute
		top $headerHeight
		width $dropdownWidth = 176px
		height auto
		margin-left -1px
		border 1px solid $blue
		border-top 0px
		font-size 14px
		background-color white
		&.open
			display block
		li
			display block
			height 14px
			color $blue
			&.has-divider
				border-top 1px solid $lightBlue
			&:hover
				color white
				background-color $lightBlue
			&.hover
				color white
				background-color $blue
				ul
					display block
			a
				margin -16px -7px 0 -7px
				padding 10px 7px 0 7px
				display block
				width 100%
				height 29px

			ul
				display none
				position absolute
				top -1px
				left $dropdownWidth
				width $subDropdownWidth = 450px
				height 100%
				border 1px solid $blue
				background-color white
				$gap = 10px
				multi-column(2, $gap, ($subDropdownWidth - $gap) / 2)
				li
					margin 4px 1em
