{
    "targets": {
        "staging": "/srv/sites/staging.khanovaskola.cz",
        "production": "/srv/sites/khanovaskola.cz"
    },
    "pre-update": [
    	"cp www/.maintenance.php www/maintenance.php"
    ],
    "post-update": [
    	"echo $GIT_DIR",
    	"echo $GIT_DIR && composer install",
