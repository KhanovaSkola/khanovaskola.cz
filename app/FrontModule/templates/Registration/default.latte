{var $title = Registrace}
{var $description = "Po registraci uvidite váš postup: hotové lekce a úspěšnost cvičení. Máte-li tu učitele, budete od něj moct dostávat úkoly."}
{#content}

<article id="page-root">
	<div class="signup-container card-case vertical-shadow">
		<div class="pw-signup container">
			<div class="pw-login">
				<h3>Registrace do Khanovy školy</h3>

				<div class="pw-login-contents">

					{form registrationForm}
						{control registrationForm errors}

						<div class="field-error" id="error-text">&nbsp;</div>

						<img src="/images/hand-tree.png" width="75" height="75" class="tree">

						<div class="field-container">
							{label name, class => "field-label"}Jméno{/label}
							{input name, class => "simple-input ui-corner-all"}
						</div>
						<div class="field-container">
							{label mail, class => "field-label"}Email{/label}
							{input mail, class => "simple-input ui-corner-all"}
						</div>
						<div class="field-container">
							{label password, class => "field-label"}Heslo{/label}
							{input password, class => "simple-input ui-corner-all"}
						</div>

						{input send, value => "Přihlásit", class => "simple-button green"}
					{/form}
				</div>
			</div>

			<div class="horizontal-separator">
				<span class="separator-text">NEBO</span>
			</div>

			<h3>Máte Google nebo Facebook účet? Můžete se rovnou přihlásit:</h3>
			<div class="providers container center">
				<div id="login-google" class="action-gradient provider">
					<div class="img-container">
						<a n:href=":Sign:inGoogle">
							<img width="180" height="61" alt="Google" src="{$basePath}/images/google-logo-large.png">
						</a>
					</div>
				</div>
				<div id="login-facebook" class="action-gradient provider" style="margin-left: 12pt;">
					<div class="img-container">
						<a n:href=":Sign:inFacebook">
							<img width="180" height="61" alt="Facebook" src="{$basePath}/images/facebook-logo-large.png">
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</article>
